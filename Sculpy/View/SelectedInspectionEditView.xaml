<Page
    x:Class="Sculpy.View.SelectedInspectionEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sculpy.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:Sculpy.ViewModel"
    mc:Ignorable="d">
    
    <Page.DataContext>
        <viewModel:SelectedInspectionEditViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Name="SaveButton" Icon="Accept" Label="Save"/>
            <AppBarButton Name="CancelButton"  Icon="Cancel" Label="Cancel"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <RelativePanel>
            <TextBox Name="TitleTextBox" 
                     Text="{Binding SelectedInspection.Inspection_Title, Mode=TwoWay}"
                     FontSize="20"
                     Width="700"
                     Height="75"
                     BorderBrush="Gray"
                     RelativePanel.AlignHorizontalCenterWithPanel="True"
                     Margin="50,50,50,20"/>
            <TextBox Name="NotesTextBox"
                     Text="{Binding SelectedInspection.Inspection_Note, Mode=TwoWay}"
                     Width="700"
                     Height="400"
                     BorderBrush="Gray"
                     RelativePanel.Below="TitleTextBox"
                     RelativePanel.AlignHorizontalCenterWithPanel="True"/>
        </RelativePanel>
            
        <RelativePanel Grid.Column="1" Padding="50">
            <TextBlock Name="DateTextBlock" 
                       Text="Date"
                       Style="{StaticResource TextBlockStyle}"/>
            <DatePicker Name="DatePicker"
                       RelativePanel.Below="DateTextBlock"
                        Margin="0,0,0,30"/>
            <TextBlock Name="DamageTextBlock" 
                       Text="Damage"
                       Style="{StaticResource TextBlockStyle}"
                       RelativePanel.Below="DatePicker"/>
            <ComboBox Name="DamageComboBox" 
                      PlaceholderText="Select from list" 
                      RelativePanel.Below="DamageTextBlock" 
                      Style="{StaticResource ComboBoxStyle}">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="Biological growth"/>
                <ComboBoxItem Content="Weathering"/>
                <ComboBoxItem Content="Construction damage"/>
                <ComboBoxItem Content="Defective joint"/>
                <ComboBoxItem Content="Discoloration"/>
                <ComboBoxItem Content="Cracks"/>
                <ComboBoxItem Content="Lost parts"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>
            <TextBlock Name="TreatmentTextBlock" 
                       Text="Treatment"
                       Style="{StaticResource TextBlockStyle}"
                       RelativePanel.Below="DamageComboBox"/>
            <ComboBox Name="TreatmentComboBox" 
                      PlaceholderText="Select from list" 
                      RelativePanel.Below="TreatmentTextBlock"
                      Style="{StaticResource ComboBoxStyle}">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="Wash"/>
                <ComboBoxItem Content="Wax"/>
                <ComboBoxItem Content="Rebuild"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>
            <TextBlock Name="FrequencyTextBlock" 
                       Text="Treatment frequency"
                       Style="{StaticResource TextBlockStyle}"
                       RelativePanel.Below="TreatmentComboBox"/>
            <ComboBox Name="FrequencyComboBox" 
                      PlaceholderText="Select from list" 
                      RelativePanel.Below="FrequencyTextBlock"
                      Style="{StaticResource ComboBoxStyle}">
                <ComboBoxItem Content="None"/>
                <ComboBoxItem Content="Immediately"/>
                <ComboBoxItem Content="Look after in 10 years"/>
                <ComboBoxItem Content="Treatment plan"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>
        </RelativePanel>
        
    </Grid>
</Page>
